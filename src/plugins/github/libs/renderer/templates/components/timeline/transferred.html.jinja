{% from "icons/arrow-right.html.jinja" import octicon_arrow_right %}

{#
actor: str
actor_avatar: str
created_at: datetime
#}
{% macro transferred(actor, actor_avatar, created_at) %}
<div class="TimelineItem">
  <div class="TimelineItem-badge color-fg-on-emphasis color-bg-done-emphasis">
    {{ octicon_arrow_right() }}
  </div>
  <div class="TimelineItem-body">
    <a class="d-inline-block">
      <img
        class="avatar avatar-user"
        height="20"
        width="20"
        src="{{ actor_avatar }}"
      />
    </a>
    <a class="author Link--primary text-bold">
      {{ actor|escape }}
    </a>
    transferred this issue
    <a class="Link--secondary">{{ created_at|relative_time }}</a>
  </div>
</div>
{% endmacro %}
