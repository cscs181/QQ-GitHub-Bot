{% from "icons/project.html.jinja" import octicon_project %}

{#
actor: str
actor_avatar: str
created_at: datetime
to_column_name: str | None
#}
{% macro added_to_project(actor, actor_avatar, created_at, to_column_name) %}
<div class="TimelineItem">
  <div class="TimelineItem-badge">
    {{ octicon_project() }}
  </div>
  <div class="TimelineItem-body">
    <a>
      <img
        class="avatar avatar-user"
        height="20"
        width="20"
        src="{{ actor_avatar }}"
      />
    </a>
    <a class="author Link--primary text-bold">{{ actor|escape }}</a>
    added this
    {% if to_column_name %}
    to <strong>{{ to_column_name|escape }}</strong>
    {% endif %}
    in project
    <a class="Link--secondary">{{ created_at|relative_time }}</a>
  </div>
</div>
{% endmacro %}
