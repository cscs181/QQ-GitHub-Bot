{% from "icons/tag.html.jinja" import octicon_tag %}
{% from "components/issue/label.html.jinja" import issue_label %}

{% macro labeled(actor, actor_avatar, created_at, label_name, label_color) %}
<div class="TimelineItem">
  <div class="TimelineItem-badge">
    {{ octicon_tag() }}
  </div>
  <div class="TimelineItem-body">
    <a class="d-inline-block">
      <img
        class="avatar avatar-user"
        height="20"
        width="20"
        src="{{ actor_avatar }}"
      />
    </a>
    <a class="author Link--primary text-bold">
      {{ actor|escape }}
    </a>
    added the
    {{ issue_label(label_name, label_color) }}
    label
    <a class="Link--secondary">{{ created_at|relative_time }}</a>
  </div>
</div>
{% endmacro %}
