{% from "icons/lock.html.jinja" import octicon_lock %}

{#
actor: str
actor_avatar: str
created_at: datetime
lock_reason: str | None
#}
{% macro locked(actor, actor_avatar, created_at, lock_reason) %}
<div class="TimelineItem">
  <div class="TimelineItem-badge color-fg-on-emphasis color-bg-emphasis">
    {{ octicon_lock() }}
  </div>
  <div class="TimelineItem-body">
    <a class="d-inline-block">
      <img
        class="avatar avatar-user"
        height="20"
        width="20"
        src="{{ actor_avatar }}"
      />
    </a>
    <a class="author Link--primary text-bold">
      {{ actor|escape }}
    </a>
    locked
    {% if lock_reason %}
    as
    <strong>{{ lock_reason|escape }}</strong>
    {% endif %}
    and limited conversation to collaborators
    <a class="Link--secondary">{{ created_at|relative_time }}</a>
  </div>
</div>
{% endmacro %}
