{% from "icons/pencil.html.jinja" import octicon_pencil %}

{#
actor: str
actor_avatar: str
created_at: datetime
from_name: str
to_name: str
#}
{% macro renamed(actor, actor_avatar, created_at, from_name, to_name) %}
<div class="TimelineItem">
  <div class="TimelineItem-badge">
    {{ octicon_pencil() }}
  </div>
  <div class="TimelineItem-body">
    <a>
      <img
        class="avatar avatar-user"
        height="20"
        width="20"
        src="{{ actor_avatar }}"
      />
    </a>
    <a class="author Link--primary text-bold">{{ actor|escape }}</a>
    changed the title
    <del class="text-bold markdown-title">{{ from_name|markdown_title }}</del>
    <ins class="text-bold markdown-title no-underline">
      {{ to_name|markdown_title }}
    </ins>
    <a class="Link--secondary">{{ created_at|relative_time }}</a>
  </div>
</div>
{% endmacro %}
