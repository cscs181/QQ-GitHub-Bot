{% from "icons/milestone.html.jinja" import octicon_milestone %}

{#
actor: str
actor_avatar: str
created_at: datetime
milestone: str
#}
{% macro milestoned(actor, actor_avatar, created_at, milestone) %}
<div class="TimelineItem">
  <div class="TimelineItem-badge">
    {{ octicon_milestone() }}
  </div>
  <div class="TimelineItem-body">
    <a class="d-inline-block">
      <img
        class="avatar avatar-user"
        height="20"
        width="20"
        src="{{ actor_avatar }}"
      />
    </a>
    <a class="author Link--primary text-bold">
      {{ actor|escape }}
    </a>
    added this to the
    <a class="Link--primary text-bold">{{ milestone|escape }}</a>
    milestone
    <a class="Link--secondary">{{ created_at|relative_time }}</a>
  </div>
</div>
{% endmacro %}
