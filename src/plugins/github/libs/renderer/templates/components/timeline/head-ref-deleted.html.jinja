{% from "icons/branch.html.jinja" import octicon_branch %}

{#
actor: str
actor_avatar: str
created_at: datetime
head_ref: str
#}
{% macro head_ref_deleted(actor, actor_avatar, created_at, head_ref) %}
<div class="TimelineItem">
  <div class="TimelineItem-badge">
    {{ octicon_branch() }}
  </div>
  <div class="TimelineItem-body">
    <a>
      <img
        class="avatar avatar-user"
        height="20"
        width="20"
        src="{{ actor_avatar }}"
      />
    </a>
    <a class="author Link--primary text-bold">{{ actor|escape }}</a>
    deleted the
    <span class="branch-name css-truncate color-fg-muted">
      <a class="no-underline">
        {{ head_ref|escape }}
      </a>
    </span>
    branch
    <a class="Link--secondary">{{ created_at|relative_time }}</a>
  </div>
</div>
{% endmacro %}
